# ---------------------------------------------------------------------------
# DATABASE CONFIGURATION
# ---------------------------------------------------------------------------
DB_HOST=localhost
DB_USER=viora
DB_PASS=123456
DB_NAME=viora_pluse_v1

# ---------------------------------------------------------------------------
# REDIS CONFIGURATION
# ---------------------------------------------------------------------------
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
# ---------------------------------------------------------------------------
# ADMIN DASHBOARD CONFIGURATION
# ---------------------------------------------------------------------------
ADMIN_PASS=admin123
# ---------------------------------------------------------------------------
# JWT CONFIGURATION
# ---------------------------------------------------------------------------
# Generate secure secrets before deployment
ACCESS_TOKEN_SECRET="YOUR_ACCESS_SECRET"
REFRESH_TOKEN_SECRET="YOUR_REFRESH_SECRET"

# Access token valid for 30 minutes
ACCESS_TOKEN_EXPIRATION=1800

# Refresh token valid for 7 days
REFRESH_TOKEN_EXPIRATION=604800

# Secret for overall JWT signing (if different from access/refresh)
JWT_SECRET=your_jwt_secret

# ---------------------------------------------------------------------------
# COOKIE CONFIGURATION
# ---------------------------------------------------------------------------
# User session cookie lifetime: 7 days
USER_COOKIE_EXPIRATION=604800

# Cookies default security flags
COOKIE_SECURE=false
COOKIE_HTTP_ONLY=true
COOKIE_SAME_SITE=lax

# ---------------------------------------------------------------------------
# EMAIL (SMTP) CONFIGURATION
# ---------------------------------------------------------------------------
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASS="YOUR_EMAIL_PASS"

# ---------------------------------------------------------------------------
# RATE LIMITING / SECURITY
# ---------------------------------------------------------------------------
AUTH_LIMITER_MAX=1000          # Adjust to realistic values
AUTH_LIMITER_WINDOW_MS=60000   # 1 minute

# ---------------------------------------------------------------------------
# APP CONFIGURATION
# ---------------------------------------------------------------------------
NODE_ENV=development
BASE_URL="http://127.0.0.1:3003/api/1.0.0/"

# ---------------------------------------------------------------------------
# EXTERNAL API KEYS 
# ---------------------------------------------------------------------------
# Pexels API Key required for collecting images
PEXELS_API_KEY=YOUR_PEXELS_API_KEY

# Gemini AI API Key
GEMINI_API_KEY=YOUR_GEMINI_API_KEY

# Google Cloud / Google Auth
GOOGLE_CLIENT_ID=YOUR_GOOGLE_CLIENT_ID
GOOGLE_CLIENT_SECRET=YOUR_GOOGLE_CLIENT_SECRET
GOOGLE_APPLICATION_CREDENTIALS="./path/to/viora-firebase-adminsdk.json"

FIREBASE_STORAGE_EMULATOR_HOST="127.0.0.1:9199"
USE_FIREBASE_STORAGE=false

# Firebase Configuration
# Toggle to enable/disable Firebase (if false, local storage is used)
USE_FIREBASE=true
# Firebase Project Config
FIREBASE_PROJECT_ID=viora-887d7
FIREBASE_STORAGE_BUCKET=viora-887d7.firebasestorage.app
# Optional: Credentials for Env-based auth (overrides/replaces JSON file)
FIREBASE_CLIENT_EMAIL=null
FIREBASE_PRIVATE_KEY=null

# ---------------------------------------------------------------------------
# AI / EMBEDDING SERVICE CONFIGURATION
# ---------------------------------------------------------------------------
USE_MULTIMODAL_EMBEDDINGS=false
EMBEDDING_SERVER_URL=http://localhost:8000